<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/item_game_width"
    android:layout_height="@dimen/item_game_height"
    android:layout_margin="4dp"
    android:background="@drawable/item_game_background"
    android:paddingHorizontal="4dp"
    android:paddingVertical="4dp">

    <View
        android:id="@+id/imageViewPlaceHolder"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/item_background_place_holder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/recyclerViewPlatformsPlaceHolder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/item_background_place_holder"
        app:layout_constraintBottom_toBottomOf="@id/imageViewPlaceHolder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewPlaceHolder"
        app:layout_constraintTop_toTopOf="@id/imageViewPlaceHolder" />

    <View
        android:id="@+id/textViewMetaScorePlaceHolder"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/item_background_place_holder"
        app:layout_constraintStart_toStartOf="@id/imageViewPlaceHolder"
        app:layout_constraintTop_toBottomOf="@id/imageViewPlaceHolder" />

    <View
        android:id="@+id/textViewNamePlaceHolder"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/item_background_place_holder"
        app:layout_constraintBottom_toBottomOf="@id/textViewMetaScorePlaceHolder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewMetaScorePlaceHolder"
        app:layout_constraintTop_toTopOf="@id/textViewMetaScorePlaceHolder"/>

    <View
        android:id="@+id/ratingBarPlaceHolder"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@drawable/item_background_place_holder"
        app:layout_constraintBottom_toBottomOf="@id/textViewScorePlaceHolder"
        app:layout_constraintEnd_toEndOf="@id/imageViewPlaceHolder"
        app:layout_constraintStart_toStartOf="@id/textViewNamePlaceHolder"
        app:layout_constraintTop_toTopOf="@id/textViewScorePlaceHolder"/>

    <View
        android:id="@+id/textViewScorePlaceHolder"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/item_background_place_holder"
        app:layout_constraintEnd_toEndOf="@id/textViewMetaScorePlaceHolder"
        app:layout_constraintStart_toStartOf="@id/textViewMetaScorePlaceHolder"
        app:layout_constraintTop_toBottomOf="@id/textViewNamePlaceHolder"/>

</androidx.constraintlayout.widget.ConstraintLayout>
