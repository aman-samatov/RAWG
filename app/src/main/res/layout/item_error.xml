<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/item_game_width"
    android:layout_height="@dimen/item_game_height"
    android:layout_margin="4dp"
    android:background="@drawable/item_game_background"
    android:paddingHorizontal="4dp"
    android:paddingVertical="4dp">

    <ImageView
        android:id="@+id/refreshImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_refresh"
        android:contentDescription="@string/try_again"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tryAgainTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/try_again"
        android:fontFamily="@font/quicksand_medium"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/refreshImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
